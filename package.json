{
    "name": "project-references-outfile-modules",
    "scripts": {
        "build": "run-s compile",
        "build:prod": "run-s compile:prod",

        "compile": "run-p compile:ts compile:less",
        "compile:prod": "run-p compile:ts:prod compile:less:prod",        
        "compile:ts": "tsc --build src",
        "compile:ts:prod": "tsc --build src/tsconfig.prod.json --force",
        "compile:less": "lessc src/ui/index.less dist/css/index.css",
        "compile:less:prod": "npm run compile:less -- --clean-css",

        "watch": "run-p watch:ts watch:less",
        "watch:ts": "npm run compile:ts -- --watch",
        "watch:less": "less-watch-compiler src/ui dist/css index.less",
        "watch:resources": "npm run copy:resources -- --watch",

        "copy:resources": "cpx resources/** dist",

        "clean": "rimraf dist"
    },
    "devDependencies": {
        "cpx": "^1.5.0",
        "less": "^3.9.0",
        "less-plugin-clean-css": "^1.5.1",
        "less-watch-compiler": "^1.13.0",
        "npm-run-all": "^4.1.5",
        "rimraf": "^2.6.3",
        "typescript": "^3.5.1"
    }
}